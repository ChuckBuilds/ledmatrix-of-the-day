{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "x-propertyOrder": [
    "enabled",
    "update_interval",
    "display_rotate_interval",
    "subtitle_rotate_interval",
    "category_order",
    "uploaded_files",
    "categories",
    "display_duration"
  ],
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable or disable the of-the-day plugin"
    },
    "update_interval": {
      "type": "integer",
      "default": 3600,
      "minimum": 60,
      "description": "Update interval in seconds (checks for new day)"
    },
    "display_rotate_interval": {
      "type": "number",
      "default": 20,
      "minimum": 5,
      "description": "Seconds between rotating different display elements (title/definition/example)"
    },
    "subtitle_rotate_interval": {
      "type": "number",
      "default": 10,
      "minimum": 5,
      "description": "Seconds between rotating subtitle information"
    },
    "category_order": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": ["word_of_the_day", "slovenian_word_of_the_day"],
      "description": "Order to display categories"
    },
    "categories": {
      "type": "object",
      "title": "Categories",
      "description": "Category configurations. Each key is a category ID (e.g., word_of_the_day). Categories are added/removed via the file manager.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable or disable this category"
          },
          "data_file": {
            "type": "string",
            "description": "Path to data file (relative to plugin directory)"
          },
          "display_name": {
            "type": "string",
            "description": "Display name shown in configuration"
          }
        },
        "required": ["enabled", "data_file", "display_name"]
      }
    },
    "display_duration": {
      "type": "number",
      "default": 40,
      "minimum": 10,
      "description": "How long to display each category in seconds"
    },
    "uploaded_files": {
      "type": "array",
      "title": "Data Files",
      "x-widget": "file-upload",
      "x-upload-config": {
        "endpoint": "/api/v3/plugins/of-the-day/json/upload",
        "plugin_id": "ledmatrix-of-the-day",
        "max_files": 20,
        "allowed_types": ["application/json"],
        "max_size_mb": 5,
        "file_type": "json"
      },
      "description": "Upload JSON data files for your of-the-day categories. Files must contain day numbers (1-365) as keys.",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Category name (from filename)"
          },
          "filename": {
            "type": "string",
            "description": "Filename"
          },
          "path": {
            "type": "string",
            "description": "File path relative to plugin directory"
          },
          "size": {
            "type": "integer",
            "description": "File size in bytes"
          },
          "uploaded_at": {
            "type": "string",
            "format": "date-time",
            "description": "Upload timestamp"
          },
          "entry_count": {
            "type": "integer",
            "description": "Number of entries (days) in the JSON file"
          }
        }
      }
    }
  },
  "required": ["enabled"]
}

